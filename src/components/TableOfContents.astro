---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
  minDepth?: number;
  maxDepth?: number;
}

const { headings, minDepth = 2, maxDepth = 3 } = Astro.props;
const filtered = headings.filter((h) => h.depth >= minDepth && h.depth <= maxDepth);
---

{filtered.length > 1 && (
  <nav aria-label="Table of contents" class="p-4 rounded-lg border border-[var(--color-border)] bg-[var(--color-surface-alt)]">
    <h2 class="text-sm font-heading font-semibold uppercase tracking-wider text-[var(--color-text-secondary)] mb-3">
      On this page
    </h2>
    <ul class="space-y-2">
      {filtered.map((heading) => (
        <li style={`margin-left: ${(heading.depth - minDepth) * 1}rem`}>
          <a
            href={`#${heading.slug}`}
            class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
