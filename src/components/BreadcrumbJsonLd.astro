---
interface Crumb {
  name: string;
  url: string;
}

interface Props {
  crumbs: Crumb[];
}

const { crumbs } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": crumbs.map((crumb, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": crumb.name,
    "item": crumb.url,
  })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
