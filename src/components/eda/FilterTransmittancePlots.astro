---
/**
 * FilterTransmittancePlots — Build-time SVG plot generator for the Filter Transmittance case study.
 * Accepts a `type` prop to select which plot to render.
 * All SVG is generated at build time — zero client-side JS.
 */
import PlotFigure from './PlotFigure.astro';
import { filterTransmittance } from '../../data/eda/datasets';
import {
  generate4Plot,
  generateLinePlot,
  generateLagPlot,
  generateHistogram,
  generateProbabilityPlot,
  generateAutocorrelationPlot,
  generateSpectralPlot,
} from '../../lib/eda/svg-generators/index';

type PlotType =
  | '4-plot' | 'run-sequence' | 'lag' | 'histogram' | 'probability'
  | 'autocorrelation' | 'spectral';

interface Props {
  type: PlotType;
  caption?: string;
}

const { type, caption } = Astro.props;

const singleConfig = {
  width: 720,
  height: 450,
  margin: { top: 35, right: 20, bottom: 45, left: 55 },
};

const compositeConfig = {
  width: 720,
  height: 540,
};

let svg = '';

switch (type) {
  case '4-plot':
    svg = generate4Plot(filterTransmittance, compositeConfig);
    break;
  case 'run-sequence':
    svg = generateLinePlot({
      data: filterTransmittance,
      mode: 'run-sequence',
      config: singleConfig,
      title: 'Run Sequence Plot',
      xLabel: 'Observation',
      yLabel: 'Transmittance',
    });
    break;
  case 'lag':
    svg = generateLagPlot({
      data: filterTransmittance,
      lag: 1,
      config: singleConfig,
      title: 'Lag Plot (k = 1)',
    });
    break;
  case 'histogram':
    svg = generateHistogram({
      data: filterTransmittance,
      showKDE: true,
      config: singleConfig,
      title: 'Histogram',
      xLabel: 'Transmittance',
      yLabel: 'Frequency',
    });
    break;
  case 'probability':
    svg = generateProbabilityPlot({
      data: filterTransmittance,
      type: 'normal',
      config: singleConfig,
      title: 'Normal Probability Plot',
    });
    break;
  case 'autocorrelation':
    svg = generateAutocorrelationPlot({
      data: filterTransmittance,
      maxLag: 25,
      config: singleConfig,
      title: 'Autocorrelation Plot',
      xLabel: 'Lag',
      yLabel: 'Autocorrelation',
    });
    break;
  case 'spectral':
    svg = generateSpectralPlot({
      data: filterTransmittance,
      config: singleConfig,
      title: 'Spectral Plot',
    });
    break;
}

const defaultCaptions: Record<PlotType, string> = {
  '4-plot': 'Four-plot diagnostic layout for the filter transmittance dataset (run sequence, lag, histogram, normal probability). The run sequence plot reveals a location shift around observation 35 and the lag plot shows severe autocorrelation.',
  'run-sequence': 'Run sequence plot of filter transmittance data showing an upward shift in location around observation 35 — the first portion fluctuates near 2.001-2.002 while the later portion shifts to 2.002-2.003.',
  'lag': 'Lag-1 plot showing a tight linear cluster along the diagonal (r1 = 0.94), indicating severe non-randomness caused by a sampling rate that was too fast.',
  'histogram': 'Histogram with KDE overlay of the filter transmittance data. Because the data are severely autocorrelated, the shape reflects dependence structure rather than a meaningful distribution.',
  'probability': 'Normal probability plot of the filter transmittance data. Interpretation is not meaningful because the randomness assumption is violated.',
  'autocorrelation': 'Autocorrelation plot showing extreme positive autocorrelation at all lags — consistent with a data acquisition system sampling too fast, where each measurement is contaminated by the previous reading.',
  'spectral': 'Spectral plot showing dominant low-frequency content, consistent with the slow drift and location shift visible in the run sequence plot. The absence of a sharp spectral peak indicates drift-based rather than cyclic non-randomness.',
};

const figCaption = caption ?? defaultCaptions[type];
---

<PlotFigure svg={svg} caption={figCaption} />
