    "Python",
    "TypeScript",
    "Java"
  ],
  "sameAs": [
    "https://github.com/PatrykQuantumNomad",
    "https://www.linkedin.com/in/patrykgolabek/",
    "https://x.com/QuantumMentat",
    "https://youtube.com/@QuantumMentat",
