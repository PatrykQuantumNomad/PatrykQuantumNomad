---
interface Props {
  src: string;
  alt: string;
  caption?: string;
}
const { src, alt, caption } = Astro.props;
---

<figure class="not-prose my-8">
  <img
    src={src}
    alt={alt}
    class="w-full rounded-lg border border-[var(--color-border)] shadow-md hover:shadow-lg transition-shadow duration-300"
    loading="lazy"
    decoding="async"
  />
  {caption && (
    <figcaption class="mt-3 text-center text-sm text-[var(--color-text-secondary)] italic">
      {caption}
    </figcaption>
  )}
</figure>
