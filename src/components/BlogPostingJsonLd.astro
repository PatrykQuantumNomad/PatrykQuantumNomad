---
interface Props {
  title: string;
  description: string;
  publishedDate: Date;
  updatedDate?: Date;
  url: string;
  tags?: string[];
  image?: string;
  articleSection?: string;
  wordCount?: number;
  about?: { type: string; name: string; url: string };
}

const { title, description, publishedDate, updatedDate, url, tags, image, articleSection, wordCount, about } = Astro.props;

const schema: Record<string, unknown> = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "datePublished": publishedDate.toISOString(),
  "dateModified": (updatedDate || publishedDate).toISOString(),
  "url": url,
  "inLanguage": "en",
  "author": {
    "@type": "Person",
    "@id": "https://patrykgolabek.dev/#person",
    "name": "Patryk Golabek",
    "url": "https://patrykgolabek.dev"
  },
  "publisher": {
    "@type": "Person",
    "@id": "https://patrykgolabek.dev/#person",
    "name": "Patryk Golabek",
    "url": "https://patrykgolabek.dev"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": url
  }
};

if (tags && tags.length > 0) {
  schema["keywords"] = tags.join(', ');
}

if (articleSection) {
  schema["articleSection"] = articleSection;
}

if (wordCount) {
  schema["wordCount"] = wordCount;
}

if (about) {
  schema["about"] = {
    "@type": about.type,
    "name": about.name,
    "url": about.url,
  };
}

if (image) {
  schema["image"] = {
    "@type": "ImageObject",
    "url": image,
    "width": 1200,
    "height": 630
  };
}

schema["speakable"] = {
  "@type": "SpeakableSpecification",
  "cssSelector": [".prose h2", ".prose p:first-of-type", "[data-tldr]", "[data-key-takeaway]"]
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
