---
interface Props {
  title: string;
  description: string;
  publishedDate: Date;
  updatedDate?: Date;
  url: string;
  tags?: string[];
  image?: string;
}

const { title, description, publishedDate, updatedDate, url, tags, image } = Astro.props;

const schema: Record<string, unknown> = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "datePublished": publishedDate.toISOString(),
  "dateModified": (updatedDate || publishedDate).toISOString(),
  "url": url,
  "inLanguage": "en",
  "author": {
    "@type": "Person",
    "@id": "https://patrykgolabek.dev/#person",
    "name": "Patryk Golabek",
    "url": "https://patrykgolabek.dev"
  },
  "publisher": {
    "@type": "Person",
    "@id": "https://patrykgolabek.dev/#person",
    "name": "Patryk Golabek",
    "url": "https://patrykgolabek.dev"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": url
  }
};

if (tags && tags.length > 0) {
  schema["keywords"] = tags.join(', ');
}

if (image) {
  schema["image"] = {
    "@type": "ImageObject",
    "url": image,
    "width": 1200,
    "height": 630
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
