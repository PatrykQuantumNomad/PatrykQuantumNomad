---
import { categories } from '../data/projects';
import type { Category } from '../data/projects';

const categoryMeta: Record<Category, { slug: string; label: string }> = {
  'Kubert Kubernetes Platform': { slug: 'kubert',      label: 'Kubert' },
  'AI & Intelligent Agents':    { slug: 'ai-agents',   label: 'AI Agents' },
  'Open Source Tools':           { slug: 'open-source', label: 'Open Source' },
};

const tabs = [
  { slug: 'all', label: 'All' },
  ...categories.map((c) => categoryMeta[c]),
];
---

<nav class="flex flex-wrap gap-2 mb-10" aria-label="Filter projects by category">
  {tabs.map((tab) => (
    <button
      class="filter-tab meta-mono px-4 py-1.5 rounded-full border border-[var(--color-border)] transition-all duration-200"
      data-filter={tab.slug}
      aria-pressed={tab.slug === 'all' ? 'true' : 'false'}
    >
      {tab.label}
    </button>
  ))}
</nav>
