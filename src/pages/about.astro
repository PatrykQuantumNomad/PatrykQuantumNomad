---
import Layout from '../layouts/Layout.astro';

const techStack = [
  {
    label: 'Languages',
    items: ['Python', 'Java', 'TypeScript', 'JavaScript', 'Go', 'Shell', 'SQL', 'HCL'],
  },
  {
    label: 'Frontend',
    items: ['React', 'Angular', 'Next.js', 'Astro', 'Tailwind CSS'],
  },
  {
    label: 'Backend',
    items: ['Node.js', 'FastAPI', 'Spring Boot', 'REST', 'GraphQL'],
  },
  {
    label: 'Cloud & Infra',
    items: ['Kubernetes', 'Docker', 'Terraform', 'Terragrunt', 'Helm', 'Google Cloud', 'AWS'],
  },
  {
    label: 'AI/ML',
    items: ['LangGraph', 'Langflow', 'LLM Agents', 'RAG Pipelines', 'Prompt Engineering', 'Gemini', 'OpenAI'],
  },
  {
    label: 'DevOps',
    items: ['CI/CD', 'GitOps', 'ArgoCD', 'GitHub Actions', 'Observability', 'Prometheus', 'Grafana'],
  },
];

const highlights = [
  {
    title: 'Pre-1.0 Kubernetes Adopter',
    text: 'Started building production Kubernetes clusters before the 1.0 release, contributing to the ecosystem from its earliest days.',
  },
  {
    title: 'Cloud-Native Architecture Leadership',
    text: 'Designed and delivered cloud-native platforms handling production workloads across Google Cloud and AWS.',
  },
  {
    title: 'AI/ML Systems Builder',
    text: 'Building LLM agent systems, RAG pipelines, and AI-powered automation using LangGraph and custom orchestration.',
  },
  {
    title: 'Open-Source Contributor',
    text: 'Maintaining 19+ repositories spanning Kubernetes tooling, AI agents, infrastructure as code, and developer platforms.',
  },
  {
    title: 'Technical Writer',
    text: 'Publishing regularly at Translucent Computing and Kubert AI on cloud architecture, Kubernetes, and AI engineering.',
  },
];
---

<Layout
  title="About — Patryk Golabek | Cloud-Native Software Architect"
  description="About Patryk Golabek — 17+ years building cloud-native systems, Kubernetes platforms, AI/ML pipelines, and developer tools. Based in Ontario, Canada."
>
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Introduction -->
    <div class="flex flex-col sm:flex-row items-start gap-8 mb-16">
      <div class="shrink-0">
        <div class="w-24 h-24 rounded-full bg-[var(--color-accent)] flex items-center justify-center text-white text-3xl font-heading font-bold">
          PG
        </div>
      </div>
      <div>
        <h1 class="text-3xl sm:text-4xl font-heading font-bold mb-6">About Me</h1>
        <div class="space-y-4 text-[var(--color-text-secondary)] leading-relaxed">
          <p>
            I'm Patryk Golabek, a Cloud-Native Software Architect based in Ontario, Canada,
            with over 17 years of experience building and scaling production systems.
          </p>
          <p>
            I've been working with Kubernetes since before its 1.0 release, and my career has
            spanned the full evolution of cloud computing — from early containerization through
            today's AI-powered platforms. I specialize in designing resilient distributed systems,
            building AI/ML pipelines, and creating the developer platforms that teams need to ship
            with confidence.
          </p>
          <p>
            When I'm not architecting cloud infrastructure, I write about what I learn at
            <a
              href="https://translucentcomputing.com/blog/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors"
            >Translucent Computing</a> and
            <a
              href="https://mykubert.com/blog/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors"
            >Kubert AI</a> — sharing practical insights on Kubernetes, observability, LLM agents,
            and platform engineering.
          </p>
        </div>
      </div>
    </div>

    <!-- Tech Stack -->
    <div class="mb-16">
      <h2 class="text-2xl sm:text-3xl font-heading font-bold mb-8">Tech Stack</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {techStack.map(({ label, items }) => (
          <div>
            <h3 class="text-sm font-medium text-[var(--color-text-secondary)] uppercase tracking-wider mb-3">
              {label}
            </h3>
            <div class="flex flex-wrap gap-2">
              {items.map((item) => (
                <span class="text-sm px-3 py-1 rounded-full bg-[var(--color-surface-alt)] border border-[var(--color-border)] text-[var(--color-text-primary)]">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Career Highlights -->
    <div class="mb-16">
      <h2 class="text-2xl sm:text-3xl font-heading font-bold mb-8">Career Highlights</h2>
      <div class="space-y-6">
        {highlights.map(({ title, text }) => (
          <div class="pl-6 border-l-2 border-[var(--color-accent)]">
            <h3 class="font-heading font-bold text-lg mb-1">{title}</h3>
            <p class="text-[var(--color-text-secondary)]">{text}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Connect -->
    <div>
      <h2 class="text-2xl sm:text-3xl font-heading font-bold mb-6">Let's Connect</h2>
      <div class="flex flex-wrap gap-4">
        <!-- GitHub -->
        <a
          href="https://github.com/PatrykQuantumNomad"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-[var(--color-border)] text-[var(--color-text-primary)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z" />
          </svg>
          GitHub
        </a>

        <!-- LinkedIn -->
        <a
          href="https://www.linkedin.com/in/patrykgolabek/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-[var(--color-border)] text-[var(--color-text-primary)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
          </svg>
          LinkedIn
        </a>

        <!-- Translucent Computing Blog -->
        <a
          href="https://translucentcomputing.com/blog/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-[var(--color-border)] text-[var(--color-text-primary)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
          </svg>
          Translucent Computing
        </a>

        <!-- Kubert AI Blog -->
        <a
          href="https://mykubert.com/blog/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-[var(--color-border)] text-[var(--color-text-primary)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" />
          </svg>
          Kubert AI
        </a>

        <!-- Email -->
        <a
          href="mailto:patryk@translucentcomputing.com"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-[var(--color-border)] text-[var(--color-text-primary)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <rect x="2" y="4" width="20" height="16" rx="2" />
            <path d="M22 7l-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
          </svg>
          Email
        </a>
      </div>
    </div>
  </section>
</Layout>
