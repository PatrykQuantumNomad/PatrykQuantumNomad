---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Page Not Found â€” Patryk Golabek"
  description="The page you're looking for doesn't exist or has been moved."
>
  <meta slot="head" name="robots" content="noindex" />
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center">
    <p class="meta-mono text-[var(--color-accent)] mb-4">404</p>
    <h1 class="text-4xl sm:text-5xl font-heading font-bold mb-4">Page Not Found</h1>
    <p class="text-lg text-[var(--color-text-secondary)] mb-12 max-w-xl mx-auto">
      The page you're looking for doesn't exist or has been moved.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-3xl mx-auto">
      <a
        href="/"
        class="card-hover p-6 rounded-lg border border-[var(--color-border)] text-center group"
      >
        <div class="mb-3 text-[var(--color-accent)]">
          <svg class="w-8 h-8 mx-auto" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
            <polyline points="9 22 9 12 15 12 15 22" />
          </svg>
        </div>
        <span class="font-heading font-bold group-hover:text-[var(--color-accent)] transition-colors">Home</span>
      </a>

      <a
        href="/blog/"
        class="card-hover p-6 rounded-lg border border-[var(--color-border)] text-center group"
      >
        <div class="mb-3 text-[var(--color-accent)]">
          <svg class="w-8 h-8 mx-auto" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
          </svg>
        </div>
        <span class="font-heading font-bold group-hover:text-[var(--color-accent)] transition-colors">Blog</span>
      </a>

      <a
        href="/projects/"
        class="card-hover p-6 rounded-lg border border-[var(--color-border)] text-center group"
      >
        <div class="mb-3 text-[var(--color-accent)]">
          <svg class="w-8 h-8 mx-auto" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z" />
          </svg>
        </div>
        <span class="font-heading font-bold group-hover:text-[var(--color-accent)] transition-colors">Projects</span>
      </a>

      <a
        href="/contact/"
        class="card-hover p-6 rounded-lg border border-[var(--color-border)] text-center group"
      >
        <div class="mb-3 text-[var(--color-accent)]">
          <svg class="w-8 h-8 mx-auto" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <rect x="2" y="4" width="20" height="16" rx="2" />
            <path d="M22 7l-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
          </svg>
        </div>
        <span class="font-heading font-bold group-hover:text-[var(--color-accent)] transition-colors">Contact</span>
      </a>
    </div>
  </section>
</Layout>
