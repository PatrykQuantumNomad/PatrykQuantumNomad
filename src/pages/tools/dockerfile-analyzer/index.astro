---
import Layout from '../../../layouts/Layout.astro';
import DockerfileAnalyzerGate from '../../../components/tools/DockerfileAnalyzerGate';
---

<Layout
  title="Dockerfile Analyzer | Patryk Golabek"
  description="Paste your Dockerfile and get instant best-practice analysis. 40 expert rules from a Kubernetes architect. 100% client-side."
>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <h1 class="text-3xl sm:text-4xl font-heading font-bold mb-2 text-[var(--color-text-primary)]">
      Dockerfile Analyzer
    </h1>
    <p class="text-[var(--color-text-secondary)] mb-8 max-w-2xl">
      Paste your Dockerfile below and click Analyze for best-practice feedback.
      100% client-side &mdash; your code never leaves your browser.
    </p>

    <DockerfileAnalyzerGate client:only="react" />
  </section>
</Layout>
