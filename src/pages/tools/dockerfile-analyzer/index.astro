---
import Layout from '../../../layouts/Layout.astro';
import DockerfileAnalyzer from '../../../components/tools/DockerfileAnalyzer';
import DockerfileAnalyzerJsonLd from '../../../components/DockerfileAnalyzerJsonLd.astro';
import BreadcrumbJsonLd from '../../../components/BreadcrumbJsonLd.astro';
---

<Layout
  title="Dockerfile Analyzer | Patryk Golabek"
  description="Free Dockerfile linter and best-practice analyzer by a Kubernetes architect. Dozens of rules for security, efficiency, and maintainability. 100% browser-based — your code never leaves your device."
  ogImage={new URL('/open-graph/tools/dockerfile-analyzer.png', Astro.site).toString()}
  ogImageAlt="Dockerfile Analyzer — browser-based Dockerfile linter with security, efficiency, and maintainability rules"
>
  <section class="py-8 sm:py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl sm:text-4xl font-heading font-bold text-[var(--color-text-primary)] mb-2">
        Dockerfile Analyzer
      </h1>
      <div class="mb-8">
        <div class="inline-flex items-center gap-2 rounded-md border border-[var(--color-border)] px-3 py-1.5">
          <span class="text-xs text-[var(--color-text-secondary)] mr-1">Claude Code:</span>
          <a
            href="/skills/dockerfile-analyzer/SKILL.md"
            download="SKILL.md"
            class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded text-xs font-medium transition-all whitespace-nowrap
              text-[var(--color-accent)] hover:bg-[rgba(196,75,32,0.08)]
              focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-accent)]"
          >
            <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
              <polyline points="7 10 12 15 17 10" />
              <line x1="12" y1="15" x2="12" y2="3" />
            </svg>
            Skill
          </a>
          <a
            href="/skills/dockerfile-analyzer/hooks/validate-dockerfile.sh"
            download="validate-dockerfile.sh"
            class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded text-xs font-medium transition-all whitespace-nowrap
              text-[var(--color-accent)] hover:bg-[rgba(196,75,32,0.08)]
              focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-accent)]"
          >
            <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
              <polyline points="7 10 12 15 17 10" />
              <line x1="12" y1="15" x2="12" y2="3" />
            </svg>
            Hook
          </a>
        </div>
        </div>
      </div>
    </div>

    <div class="px-4 sm:px-6 lg:px-8">
      <DockerfileAnalyzer client:only="react" />
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <p class="mt-8 text-sm text-[var(--color-text-secondary)]">
      Paste your Dockerfile and click <strong>Analyze</strong>. 100% client-side, your code never leaves your browser.
      Want to learn the rules in depth? Read the
      <a href="/blog/dockerfile-best-practices/" class="text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors font-medium">companion guide</a>
      or browse
      <a href="/tools/dockerfile-analyzer/rules/dl3006/" class="text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors font-medium">individual rule docs</a>.
    </p>
    </div>
  </section>

  <DockerfileAnalyzerJsonLd />
  <BreadcrumbJsonLd crumbs={[
    { name: 'Home', url: 'https://patrykgolabek.dev/' },
    { name: 'Tools', url: 'https://patrykgolabek.dev/tools/' },
    { name: 'Dockerfile Analyzer', url: 'https://patrykgolabek.dev/tools/dockerfile-analyzer/' },
  ]} />
</Layout>
