---
import Layout from '../../layouts/Layout.astro';
import BreadcrumbJsonLd from '../../components/BreadcrumbJsonLd.astro';
import ProjectHero from '../../components/ProjectHero.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { projects, categories } from '../../data/projects';

// Separate featured from category groups (avoid duplication - LAYOUT-02)
const featured = projects.filter(p => p.featured);
const grouped = categories.map((category) => ({
  category,
  items: projects.filter((p) => p.category === category && !p.featured),
  totalCount: projects.filter((p) => p.category === category).length,
}));
---

<Layout
  title="Projects — Patryk Golabek | Open-Source Portfolio"
  description="Explore 16 open-source projects by Patryk Golabek — Kubernetes platforms, AI/ML agents, infrastructure as code, DevOps tooling, and security utilities."
>
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 dot-grid-bg">
    <h1 class="text-3xl sm:text-4xl font-heading font-bold mb-4" data-word-reveal>Projects</h1>
    <p class="text-lg text-[var(--color-text-secondary)] max-w-3xl mb-12" data-reveal>
      Open-source work spanning Kubernetes, AI/ML, infrastructure as code, and
      platform engineering. All repositories live on GitHub.
    </p>

    {/* Hero section for featured projects (LAYOUT-02) */}
    {featured.length > 0 && (
      <ProjectHero projects={featured} />
    )}

    {/* Category sections with bento grid (LAYOUT-01, LAYOUT-03) */}
    {grouped.map(({ category, items, totalCount }, idx) => (
      <div>
        {idx > 0 && (
          <div class="gradient-divider max-w-6xl mx-auto my-10" data-divider-reveal aria-hidden="true"></div>
        )}
        <div class="flex items-baseline gap-3 mb-6">
          <h2 class="text-xl sm:text-2xl font-heading font-bold" data-word-reveal>
            {category}
          </h2>
          <span class="meta-mono text-[var(--color-text-secondary)]">
            // {totalCount} {totalCount === 1 ? 'project' : 'projects'}
          </span>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 grid-flow-dense" data-card-group>
          {items.map((item) => (
            <ProjectCard project={item} />
          ))}
        </div>
      </div>
    ))}

    {/* View all on GitHub */}
    <div class="mt-16 text-center" data-reveal>
      <a
        href="https://github.com/PatrykQuantumNomad"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] font-medium transition-colors"
      >
        View all repositories on GitHub
        <svg
          class="w-4 h-4"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M7 17L17 7" />
          <path d="M7 7h10v10" />
        </svg>
      </a>
    </div>
  </section>
  <BreadcrumbJsonLd crumbs={[
    { name: "Home", url: `${Astro.site}` },
    { name: "Projects", url: `${new URL('/projects/', Astro.site)}` },
  ]} />
</Layout>
