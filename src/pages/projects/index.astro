---
import Layout from '../../layouts/Layout.astro';
import BreadcrumbJsonLd from '../../components/BreadcrumbJsonLd.astro';
import ProjectFilterBar from '../../components/ProjectFilterBar.astro';
import ProjectHero from '../../components/ProjectHero.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { projects, categories } from '../../data/projects';
import type { Category } from '../../data/projects';

// Category slug mapping (matches ProjectCard and ProjectFilterBar)
const categoryMeta: Record<Category, { slug: string }> = {
  'AI/ML & LLM Agents':         { slug: 'ai-ml' },
  'Kubernetes & Infrastructure': { slug: 'kubernetes' },
  'Platform & DevOps Tooling':   { slug: 'platform' },
  'Security & Networking':       { slug: 'security' },
};

// Separate featured from category groups (avoid duplication - LAYOUT-02)
const featured = projects.filter(p => p.featured);
const grouped = categories.map((category) => ({
  category,
  slug: categoryMeta[category].slug,
  items: projects.filter((p) => p.category === category && !p.featured),
  totalCount: projects.filter((p) => p.category === category).length,
}));
---

<Layout
  title="Projects — Patryk Golabek | Open-Source Portfolio"
  description="Explore 16 open-source projects by Patryk Golabek — Kubernetes platforms, AI/ML agents, infrastructure as code, DevOps tooling, and security utilities."
>
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 dot-grid-bg">
    <h1 class="text-3xl sm:text-4xl font-heading font-bold mb-4" data-word-reveal>Projects</h1>
    <p class="text-lg text-[var(--color-text-secondary)] max-w-3xl mb-12" data-reveal>
      Open-source work spanning Kubernetes, AI/ML, infrastructure as code, and
      platform engineering. All repositories live on GitHub.
    </p>

    <ProjectFilterBar />

    {/* Hero section for featured projects (LAYOUT-02) */}
    {featured.length > 0 && (
      <div data-hero-section>
        <ProjectHero projects={featured} />
      </div>
    )}

    {/* Category sections with bento grid (LAYOUT-01, LAYOUT-03) */}
    {grouped.map(({ category, slug, items, totalCount }, idx) => (
      <div data-category-section={slug} data-section-bg={slug} style="position: relative;">
        {idx > 0 && (
          <div class="gradient-divider max-w-6xl mx-auto my-10" data-divider-reveal aria-hidden="true"></div>
        )}
        <div class="flex items-baseline gap-3 mb-6">
          <h2 class="text-xl sm:text-2xl font-heading font-bold" data-word-reveal>
            {category}
          </h2>
          <span class="meta-mono text-[var(--color-text-secondary)]">
            // {totalCount} {totalCount === 1 ? 'project' : 'projects'}
          </span>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 grid-flow-dense" data-card-group>
          {items.map((item) => (
            <ProjectCard project={item} />
          ))}
        </div>
      </div>
    ))}

    {/* View all on GitHub */}
    <div class="mt-16 text-center" data-reveal>
      <a
        href="https://github.com/PatrykQuantumNomad"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] font-medium transition-colors"
      >
        View all repositories on GitHub
        <svg
          class="w-4 h-4"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M7 17L17 7" />
          <path d="M7 7h10v10" />
        </svg>
      </a>
    </div>
  </section>
  <BreadcrumbJsonLd crumbs={[
    { name: "Home", url: `${Astro.site}` },
    { name: "Projects", url: `${new URL('/projects/', Astro.site)}` },
  ]} />

  <script>
    import { gsap } from 'gsap';
    import { Flip } from 'gsap/Flip';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    gsap.registerPlugin(Flip, ScrollTrigger);

    const REDUCED_MOTION = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    let isAnimating = false;
    const VALID_SLUGS = ['ai-ml', 'kubernetes', 'platform', 'security'];

    function initProjectFilter() {
      const tabs = document.querySelectorAll<HTMLButtonElement>('[data-filter]');
      const cards = document.querySelectorAll<HTMLElement>('[data-card-item]');
      const sections = document.querySelectorAll<HTMLElement>('[data-category-section]');
      const heroSection = document.querySelector<HTMLElement>('[data-hero-section]');

      if (!tabs.length) return;

      // Restore filter from URL hash on load
      const initialSlug = getFilterFromHash();
      if (initialSlug !== 'all') {
        applyFilter(initialSlug, false, cards, sections, heroSection);
        setActiveTab(initialSlug);
      }

      // Tab click handlers
      tabs.forEach((tab) => {
        tab.addEventListener('click', () => {
          if (isAnimating) return;
          const slug = tab.dataset.filter!;
          applyFilter(slug, !REDUCED_MOTION, cards, sections, heroSection);
          setActiveTab(slug);
          setFilterHash(slug);
        });
      });

      // Browser back/forward hash navigation
      window.addEventListener('hashchange', () => {
        if (isAnimating) return;
        const slug = getFilterFromHash();
        applyFilter(slug, !REDUCED_MOTION, cards, sections, heroSection);
        setActiveTab(slug);
      });
    }

    function applyFilter(
      slug: string,
      animate: boolean,
      cards: NodeListOf<HTMLElement>,
      sections: NodeListOf<HTMLElement>,
      heroSection: HTMLElement | null
    ) {
      if (animate) {
        isAnimating = true;

        // Destroy vanilla-tilt before capturing Flip state (clean geometry)
        document.querySelectorAll('[data-tilt]').forEach((el) => {
          if ((el as any).vanillaTilt) (el as any).vanillaTilt.destroy();
        });

        const state = Flip.getState('[data-card-item]');
        toggleVisibility(slug, cards, sections, heroSection);

        Flip.from(state, {
          duration: 0.5,
          ease: 'power2.inOut',
          stagger: 0.03,
          absolute: true,
          absoluteOnLeave: true,
          onEnter: (els: Element[]) =>
            gsap.fromTo(
              els,
              { opacity: 0, scale: 0.9 },
              { opacity: 1, scale: 1, duration: 0.4, stagger: 0.03 }
            ),
          onLeave: (els: Element[]) =>
            gsap.to(els, { opacity: 0, scale: 0.9, duration: 0.3 }),
          onComplete: () => {
            isAnimating = false;
            ScrollTrigger.refresh();
            reinitTilt();
          },
        });
      } else {
        toggleVisibility(slug, cards, sections, heroSection);
        reinitTilt();
      }
    }

    function toggleVisibility(
      slug: string,
      cards: NodeListOf<HTMLElement>,
      sections: NodeListOf<HTMLElement>,
      heroSection: HTMLElement | null
    ) {
      const showAll = slug === 'all';

      cards.forEach((card) => {
        card.style.display = showAll || card.dataset.category === slug ? '' : 'none';
      });

      sections.forEach((section) => {
        section.style.display = showAll || section.dataset.categorySection === slug ? '' : 'none';
      });

      if (heroSection) {
        heroSection.style.display = showAll ? '' : 'none';
      }
    }

    async function reinitTilt() {
      if (window.matchMedia('(pointer: coarse)').matches) return;
      if (REDUCED_MOTION) return;

      const VanillaTilt = (await import('vanilla-tilt')).default;
      document
        .querySelectorAll<HTMLElement>('[data-tilt]:not([style*="display: none"])')
        .forEach((el) => {
          // Only init if not already initialized (destroyed elements won't have vanillaTilt)
          if (!(el as any).vanillaTilt) {
            VanillaTilt.init(el, {
              max: 15,
              speed: 300,
              glare: true,
              'max-glare': 0.3,
              perspective: 800,
            });
          }
        });
    }

    function setActiveTab(slug: string) {
      document.querySelectorAll('[data-filter]').forEach((tab) => {
        tab.setAttribute(
          'aria-pressed',
          (tab as HTMLElement).dataset.filter === slug ? 'true' : 'false'
        );
      });
    }

    function getFilterFromHash(): string {
      const hash = window.location.hash.slice(1).toLowerCase();
      return VALID_SLUGS.includes(hash) ? hash : 'all';
    }

    function setFilterHash(slug: string) {
      if (slug === 'all') {
        history.replaceState(null, '', window.location.pathname);
      } else {
        history.replaceState(null, '', '#' + slug);
      }
    }

    function initCardGlow() {
      if (window.matchMedia('(pointer: coarse)').matches) return;
      if (REDUCED_MOTION) return;

      document.querySelectorAll<HTMLElement>('[data-card-item]').forEach(card => {
        card.addEventListener('mousemove', (e) => {
          const rect = card.getBoundingClientRect();
          card.style.setProperty('--mouse-x', String(e.clientX - rect.left));
          card.style.setProperty('--mouse-y', String(e.clientY - rect.top));
        });
      });
    }

    document.addEventListener('astro:page-load', () => {
      initProjectFilter();
      initCardGlow();
    });
  </script>
</Layout>
