---
import Layout from '../../layouts/Layout.astro';
import BreadcrumbJsonLd from '../../components/BreadcrumbJsonLd.astro';
import { projects, categories } from '../../data/projects';

const grouped = categories.map((category) => ({
  category,
  items: projects.filter((p) => p.category === category),
}));
---

<Layout
  title="Projects — Patryk Golabek | Open-Source Portfolio"
  description="Explore 16 open-source projects by Patryk Golabek — Kubernetes platforms, AI/ML agents, infrastructure as code, DevOps tooling, and security utilities."
>
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 dot-grid-bg">
    <h1 class="text-3xl sm:text-4xl font-heading font-bold mb-4" data-word-reveal>Projects</h1>
    <p class="text-lg text-[var(--color-text-secondary)] max-w-3xl mb-12" data-reveal>
      Open-source work spanning Kubernetes, AI/ML, infrastructure as code, and
      platform engineering. All repositories live on GitHub.
    </p>

    {grouped.map(({ category, items }, idx) => (
      <div class={`${idx > 0 ? 'mt-12' : ''}`}>
        <h2 class="text-xl sm:text-2xl font-heading font-bold mb-6" data-word-reveal>
          {category}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4" data-card-group>
          {items.map((project, projIdx) => (
            project.liveUrl ? (
              <div
                class:list={[
                  'card-hover p-5 rounded-lg border border-[var(--color-border)] flex flex-col',
                  projIdx === 0 ? 'md:col-span-2 lg:col-span-2' : '',
                ]}
                data-card-item
                data-tilt
              >
                <div class="flex items-start justify-between gap-2">
                  <span class="font-heading font-bold text-lg">
                    {project.name}
                  </span>
                </div>
                <div class="flex flex-wrap gap-2 mt-2">
                  <span class="meta-mono px-2 py-0.5 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)]">
                    {project.language}
                  </span>
                  {project.fork && (
                    <span class="text-xs px-2 py-0.5 rounded-full bg-[var(--color-text-secondary)]/10 text-[var(--color-text-secondary)]">
                      Fork
                    </span>
                  )}
                </div>
                <p class="text-sm text-[var(--color-text-secondary)] mt-2">
                  {project.description}
                </p>
                <div class="flex items-center gap-3 mt-4 pt-3 border-t border-[var(--color-border)]">
                  <a
                    href={project.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1.5 text-sm font-medium px-3 py-1 rounded border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-colors"
                  >
                    <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                    Source
                  </a>
                  <a
                    href={project.liveUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1.5 text-sm font-medium px-3 py-1 rounded border border-[var(--color-border)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-colors"
                  >
                    <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6" />
                      <polyline points="15 3 21 3 21 9" />
                      <line x1="10" y1="14" x2="21" y2="3" />
                    </svg>
                    Live Site
                  </a>
                </div>
              </div>
            ) : (
              <a
                href={project.url}
                target="_blank"
                rel="noopener noreferrer"
                class:list={[
                  'group card-hover p-5 rounded-lg border border-[var(--color-border)]',
                  projIdx === 0 ? 'md:col-span-2 lg:col-span-2' : '',
                ]}
                data-card-item
                data-tilt
              >
                <div class="flex items-start justify-between gap-2">
                  <span class="font-heading font-bold text-lg group-hover:text-[var(--color-accent)] transition-colors">
                    {project.name}
                  </span>
                  <svg
                    class="w-4 h-4 mt-1 shrink-0 text-[var(--color-text-secondary)] group-hover:text-[var(--color-accent)] transition-colors"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    aria-hidden="true"
                  >
                    <path d="M7 17L17 7" />
                    <path d="M7 7h10v10" />
                  </svg>
                </div>
                <div class="flex flex-wrap gap-2 mt-2">
                  <span class="meta-mono px-2 py-0.5 rounded-full bg-[var(--color-accent)]/10 text-[var(--color-accent)]">
                    {project.language}
                  </span>
                  {project.fork && (
                    <span class="text-xs px-2 py-0.5 rounded-full bg-[var(--color-text-secondary)]/10 text-[var(--color-text-secondary)]">
                      Fork
                    </span>
                  )}
                </div>
                <p class="text-sm text-[var(--color-text-secondary)] mt-2">
                  {project.description}
                </p>
              </a>
            )
          ))}
        </div>
      </div>
    ))}

    <!-- View all on GitHub -->
    <div class="mt-16 text-center" data-reveal>
      <a
        href="https://github.com/PatrykQuantumNomad"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] font-medium transition-colors"
      >
        View all repositories on GitHub
        <svg
          class="w-4 h-4"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M7 17L17 7" />
          <path d="M7 7h10v10" />
        </svg>
      </a>
    </div>
  </section>
  <BreadcrumbJsonLd crumbs={[
    { name: "Home", url: `${Astro.site}` },
    { name: "Projects", url: `${new URL('/projects/', Astro.site)}` },
  ]} />
</Layout>
